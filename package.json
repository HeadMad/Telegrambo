{
  "name": "telegrambo",
  "version": "1.2.2",
  "description": "Telegrambo is a simple library for interacting with the Telegram Bot API",
  "type": "module",
  "main": "./dist/telegrambo.node.cjs.js",
  "module": "./dist/telegrambo.node.es.js",
  "browser": "./dist/telegrambo.browser.umd.js",
  "files": [
    "dist",
    "src",
    "utils"
  ],
  "exports": {
    ".": {
      "import": "./dist/telegrambo.node.es.js",
      "require": "./dist/telegrambo.node.cjs.js"
    },
    "./browser": {
      "import": "./dist/telegrambo.browser.es.js",
      "require": "./dist/telegrambo.browser.umd.js"
    },
    "./utils": "./utils/index.js"
  },
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "build:node": "vite build --config vite.config.node.js",
    "build:browser": "vite build --config vite.config.browser.js",
    "build": "pnpm build:node && pnpm build:browser"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HeadMad/Telegrambo.git"
  },
  "author": "HeadMad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HeadMad/Telegrambo/issues"
  },
  "homepage": "https://github.com/HeadMad/Telegrambo#readme",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "vite": "^7.2.6"
  }
}
